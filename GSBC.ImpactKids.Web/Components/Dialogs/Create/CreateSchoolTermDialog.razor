@inject ISchoolTermsService SchoolTermsService

<BaseChangeDialog
    T="BasicResponse"
    Response="_response"
    OnSubmit="@Submit">
    <MudForm>
        <MudTextField Required
                      @bind-Value="_request.Name"
                      Label="Name"
                      Class="mb-3"/>
        <RequiredMudDatePicker
            @bind-Date="@_request.StartDate"
            Label="Start Date"
            Class="mb-3"/>
        <RequiredMudDatePicker
            @bind-Date="@_request.EndDate"
            Label="End Date"/>
    </MudForm>
</BaseChangeDialog>